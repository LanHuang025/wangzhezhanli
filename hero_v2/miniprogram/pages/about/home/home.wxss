.UCenter-bg {
  background-image: url("https://6b69-kinghelper-dev-5gjchrw5fd49d6f0-1304998545.tcb.qcloud.la/bg-min.png");
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg .author {
  opacity: 0.8;
}

.UCenter-bg .png {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
